{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}


{{#contentFor "extraheads"}}
    <link rel="stylesheet" type="text/css" href="{{asset "built/animate.css"}}"/>
    <link rel="stylesheet" type="text/css" href="{{asset "built/17goals.css"}}"/>
{{/contentFor}}

{{!-- The big featured header, it uses blog cover image as a BG if available --}}
{{> site-header en="en"}}


{{!-- Extra 17 Special Section --}}
<section class="section-17 dark-section flex-container">
    <div class="wheel-container item">
        <div class="wheel animated rotateOut delay-3s">
            <img class="image-responsive animated rotateIn slower " src="{{asset "/images/sdg_wheel.png"}}">
        </div>
    </div>
    <div class="item animated fadeOut delay-3s">
        <div class="animated zoomIn fast">
            <center class="wheel-title">
                <span>seventeen goals!</span>
            </center>
        </div>
    </div>
</section>

<section class="section-17 light-section flex-container animated fadeIn delay-3s">
    {{> "blocks" en="en"}}
</section>

{{> "modal"}}

{{!-- Everything inside the #post tags pulls data from the post --}}


{{#post}}

    <main id="site-main" class="site-main outer">
        <div class="inner">

            <article class="post-full {{post_class}} {{#unless feature_image}}no-image{{/unless}}">

                <header class="post-full-header">
                    <h1 class="post-full-title">{{title}}</h1>
                </header>

                {{#if feature_image}}
                    <figure class="post-full-image">
                        {{!-- This is a responsive image, it loads different sizes depending on device
                        https://medium.freecodecamp.org/a-guide-to-responsive-images-with-ready-to-use-templates-c400bd65c433 --}}
                        <img
                                srcset="{{img_url feature_image size="s"}} 300w,
                            {{img_url feature_image size="m"}} 600w,
                            {{img_url feature_image size="l"}} 1000w,
                            {{img_url feature_image size="xl"}} 2000w"
                                sizes="(max-width: 800px) 400px,
                            (max-width: 1170px) 1170px,
                            2000px"
                                src="{{img_url feature_image size="xl"}}"
                                alt="{{title}}"
                        />
                    </figure>
                {{/if}}

                <section class="post-full-content">
                    <div class="post-content">
                        {{content}}
                    </div>
                </section>

            </article>

        </div>
    </main>

{{/post}}

{{!-- Ribbon --}}
<section>
    {{> "ribbon" en="en"}}
    <center class="ribbon-caption">Let's make the goals better known. Click through and discover stories about each of the 17 Sustainability Goals</center>
</section>

