      $(document).ready(function () {
      $('.block-column').click((e)=>{
        e.preventDefault();
        var imgHtml=e.target.src;
        $('#modalImage').attr('src',imgHtml);
        $('#modalLink').attr('href',e.currentTarget.children[0].attributes.href.value).html('Know More');
        $('.lower-close').html('Back to all goals');

        e.currentTarget.classList.forEach((k)=>{
            if(k.startsWith('block-column-child-'))
            {
                var index=k.split('block-column-child-')[1]
                $('#modalTitle').html(jsonCaptions.en[index-1].title)
                $('#modalCaption').html(jsonCaptions.en[index-1].caption)
            }
        })
        $('.md-modal').addClass('md-show');
      })
     $('.close-modal').on('click', () => {
        $('.md-modal').removeClass('md-show');
        $('#modalImage').attr('src','');
        $('#modalTitle').html('')
        $('#modalCaption').html('')
        $('.lower-close').html('');
      });

            var nav = document.querySelector('.header');
            var feed = document.getElementById('site-main');

            var lastScrollY = window.scrollY;
            var lastWindowHeight = window.innerHeight;
            var lastDocumentHeight = $(document).height();
            var ticking = false;

            function onScroll() {
                lastScrollY = window.scrollY;
                requestTick();
            }

            function onResize() {
                lastWindowHeight = window.innerHeight;
                lastDocumentHeight = $(document).height();
                requestTick();
            }

            function requestTick() {
                if (!ticking) {
                    requestAnimationFrame(update);
                }
                ticking = true;
            }

            function update() {
                var trigger = feed.getBoundingClientRect().top + window.scrollY;
                var progressMax = lastDocumentHeight - lastWindowHeight;

                if (lastScrollY >= trigger - 70) {
                    nav.classList.remove('transparent');
                } else {
                    nav.classList.add('transparent');
                }


                ticking = false;
            }

            window.addEventListener('scroll', onScroll, {
                passive: true
            });
            window.addEventListener('resize', onResize, false);

            update();

        });


    </script>
{{/contentFor}}
