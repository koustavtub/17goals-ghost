{{#get "posts" filter="tag:{{primry_tag}}+tag:german" limit="3" include="tags,authors"  as |related_posts|}}
    {{#if related_posts}}
        <article class="read-next-card">
            <header class="read-next-card-header">
                <h3>{{t "Related Posts"}}</h3>
            </header>
            <div class="read-next-card-content">
                <ul>
                    {{#foreach related_posts}}
                        <li>
                            <h4><a href="{{url}}">{{title}}</a></h4>
                            <div class="read-next-card-meta">
                                <p>
                                    <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="D MMM YYYY"}}</time>
                                    –
                                    {{reading_time seconds=(t "< 1 min read") minute=(t "1 min read") minutes=(t "% min read")}}
                                </p>
                            </div>
                        </li>
                    {{/foreach}}
                </ul>
            </div>
            <footer class="read-next-card-footer">
                <a href="../../ziel/{{../primry_tag}}">{{plural meta.pagination.total empty='No posts' singular='% post' plural=(t "See all % posts")}}
                    →</a>
            </footer>
        </article>
    {{/if}}
    {{#foreach related_posts limit=2}}
        {{> "post-card"}}
    {{/foreach}}
{{/get}}
