<article class="post-card {{post_class}} {{#unless feature_image}}no-image{{/unless}}">

    <a class="post-card-image-link" href="{{url}}">
        {{!-- This is a responsive image, it loads different sizes depending on device
        https://medium.freecodecamp.org/a-guide-to-responsive-images-with-ready-to-use-templates-c400bd65c433 --}}
        {{#if feature_image}}
            <img class="post-card-image"
                 srcset="{{img_url feature_image size="s"}} 300w,
                    {{img_url feature_image size="m"}} 600w,
                    {{img_url feature_image size="l"}} 1000w,
                    {{img_url feature_image size="xl"}} 2000w"
                 sizes="(max-width: 1000px) 400px, 700px"
                 src="{{img_url feature_image size="m"}}"
                 alt="{{title}}"
            />
        {{else}}
            <img src="{{asset "images/bokeh.jpeg"}}" alt="{{title}}"/>
        {{/if}}
        {{#if feature}}
            <div class="featurer">
                <span>â­‘ {{feature}}</span>
            </div>
        {{/if}}
        {{#foreach tags}}
            {{#has slug="17-goals-blog-award"}}<div class="featurer-top">{{> "icons/award"}}</div>{{/has}}
            {{#has slug="17-goals-blog-award-en"}}<div class="featurer-top">{{> "icons/award"}}</div>{{/has}}
        {{/foreach}}
    </a>


    <div class="post-card-content">

        <a class="post-card-content-link" href="{{url}}">

            <header class="post-card-header">
                {{#if primary_tag}}
                    {{#primary_tag}}
                        <div class="post-card-primary-tag">{{name}}</div>
                    {{/primary_tag}}
                {{/if}}
                <h2 class="post-card-title">{{title}}</h2>
            </header>

            <section class="post-card-excerpt">
                {{#if feature_image}}
                    <p>{{excerpt words="30"}}</p>
                {{else}}
                    <p>{{excerpt words="44"}}</p>
                {{/if}}
            </section>

        </a>
        <aside>
            <ul class="tag-list">
                {{#foreach tags}}

                    {{#has slug="1"}}
                        <li class="tag-list-item"><img src="{{asset "images/small-icons/sdg1.png"}}"/></li>
                    {{/has}}
