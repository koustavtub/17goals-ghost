                    {{/has}}

                {{/foreach}}


            </ul>

        </aside>
        <footer class="post-card-meta">
            <ul class="author-list">
                {{#foreach authors}}
                    <li class="author-list-item">

                        <div class="author-name-tooltip">
                            {{name}}
                        </div>

                        {{#if profile_image}}
                            <a href="{{url}}" class="static-avatar">
                                <img class="author-profile-image" src="{{img_url profile_image size="xs"}}" alt="{{name}}"/>
                            </a>
                        {{else}}
                            <a href="{{url}}" class="static-avatar author-profile-image">{{> "icons/avatar"}}</a>
                        {{/if}}
                    </li>
                {{/foreach}}
            </ul>
            <div class="post-card-byline-content">
                {{#has tag="english"}}
                    <span>{{#has author="count:>2"}}Multiple authors{{else}}{{authors}}{{/has}}</span>
                    <span class="post-card-byline-date"><time datetime="{{date format="YYYY-MM-DD"}}">{{date format="L"}}</time> <span class="bull">&bull;</span> {{reading_time seconds="1 min read" minute="1 min read" minutes="% min read"}}</span>
                {{else}}
                    <span>{{#has author="count:>2"}}{{t "Multiple authors"}}{{else}}{{authors}}{{/has}}</span>
                    <span class="post-card-byline-date"><time datetime="{{date format="YYYY-MM-DD"}}">{{date format="L"}}</time> <span class="bull">&bull;</span> {{reading_time seconds=(t "1 min read") minute=(t "1 min read") minutes=(t "% min read")}}</span>

                {{/has}}
            </div>
        </footer>


    </div>{{!--/.post-card-content--}}

</article>