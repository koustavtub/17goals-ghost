{{#get "posts" filter="tag:{{primry_tag}}+tag:english" limit="3" include="tags,authors"  as |related_posts|}}
    {{#if related_posts}}
        <article class="read-next-card">
            <header class="read-next-card-header">
                <h3>Related Posts:</h3>
            </header>
            <div class="read-next-card-content">
                <ul>
                    {{#foreach related_posts}}
                        <li>
                            <h4><a href="{{url}}">{{title}}</a></h4>
                            <div class="read-next-card-meta">
                                <p>
                                    <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="L"}}</time>
                                    –
                                    {{reading_time seconds='< 1 min read' minute='1 min read' minutes='% min read'}}
                                </p>
                            </div>
                        </li>
                    {{/foreach}}
                </ul>
            </div>
            <footer class="read-next-card-footer">
                <a href="../../sdg/{{../primry_tag}}">{{plural meta.pagination.total empty='No posts' singular='% post' plural="See all % posts"}}
                    →</a>
            </footer>
        </article>
    {{/if}}
    {{#foreach related_posts limit=2}}
        {{> "post-card" en="en"}}
    {{/foreach}}
{{/get}}
